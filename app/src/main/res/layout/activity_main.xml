<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="info.blogbasbas.iakintermediate.MainActivity">
    <TextView
        android:textSize="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="nama resep"
        android:id="@+id/namaresep"/>
    <TextView
        android:layout_below="@id/namaresep"
        android:textSize="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Detail Resep"
        android:id="@+id/detailresep"
         />
    <android.support.v7.widget.RecyclerView
        android:layout_below="@id/detailresep"
        android:id="@+id/rvDataResep"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </android.support.v7.widget.RecyclerView>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/addData"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="18dp"
        android:layout_marginEnd="19dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="19dp"
        android:src="@drawable/ic_add_circle_outline_black_24dp"

        />



</RelativeLayout>
